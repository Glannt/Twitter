    "nodemon": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.1.1",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "rimraf": "^5.0.5"
  }
