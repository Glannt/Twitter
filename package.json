    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Glannt/Twitter.git"
  },
  "author": "Dotnt2-Glannt09",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Glannt/Twitter/issues"
